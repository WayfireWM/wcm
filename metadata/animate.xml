<?xml version="1.0"?>
<wayfire>
	<plugin name="animate">
	<_short>Animations</_short>
	<category>Effects</category>
	<option name="open_animation" type="string">
		<_short>Open Animation</_short>
		<default>fade</default>
		<desc>
			<value>none</value>
			<_name>None</_name>
		</desc>
		<desc>
			<value>fade</value>
			<_name>Fade</_name>
		</desc>
		<desc>
			<value>zoom</value>
			<_name>Zoom</_name>
		</desc>
		<desc>
			<value>fire</value>
			<_name>Fire</_name>
		</desc>
	</option>
	<option name="close_animation" type="string">
		<_short>Close Animation</_short>
		<default>fade</default>
		<desc>
			<value>none</value>
			<_name>None</_name>
		</desc>
		<desc>
			<value>fade</value>
			<_name>Fade</_name>
		</desc>
		<desc>
			<value>zoom</value>
			<_name>Zoom</_name>
		</desc>
		<desc>
			<value>fire</value>
			<_name>Fire</_name>
		</desc>
	</option>
	<option name="duration" type="int">
		<_short>Duration</_short>
		<default>300</default>
	</option>
	<option name="startup_duration" type="int">
		<_short>Startup Duration</_short>
		<default>600</default>
	</option>
	<option name="enabled_for" type="string">
		<_short>Animation Enabled For</_short>
		<default>(type is toplevel || (type is x-or &amp;&amp; focuseable is true))</default>
	</option>
	<option name="fade_enabled_for" type="string">
		<_short>Fade Enabled For</_short>
		<default>type is overlay</default>
	</option>
	<option name="zoom_enabled_for" type="string">
		<_short>Zoom Enabled For</_short>
		<default>none</default>
	</option>
	<option name="fire_enabled_for" type="string">
		<_short>Fire Enabled For</_short>
		<default>none</default>
	</option>
	<option name="fire_particles" type="int">
		<_short>Fire Particles</_short>
		<default>2000</default>
	</option>
	<option name="fire_particle_size" type="double">
		<_short>Fire Particle Size</_short>
		<default>16</default>
	</option>
	</plugin>
</wayfire>
