<?xml version="1.0"?>
<wayfire>
	<plugin name="zoom">
	<_short>Desktop Zoom</_short>
	<category>Accessibility</category>
	<option name="modifier" type="key">
		<_short>Scroll using this modifier to zoom in/out</_short>
		<default>&lt;super&gt;</default>
	</option>
	<option name="speed" type="double">
		<_short>Speed</_short>
		<precision>0.001</precision>
		<default>0.005</default>
	</option>
	<option name="smoothing_duration" type="int">
		<_short>Smoothing Duration</_short>
		<default>300</default>
	</option>
	</plugin>
</wayfire>
