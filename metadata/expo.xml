<?xml version="1.0"?>
<wayfire>
	<plugin name="expo">
	<_short>Expo</_short>
	<category>Desktop</category>
	<option name="toggle" type="activator">
		<_short>Toggle</_short>
		<default>&lt;super&gt; KEY_E</default>
	</option>
	<option name="duration" type="int">
		<_short>Duration</_short>
		<default>300</default>
	</option>
	<option name="background" type="color">
		<_short>Background</_short>
		<default>#0000</default>
	</option>
	<option name="offset" type="double">
		<_short>Offset</_short>
		<default>10</default>
	</option>
	</plugin>
</wayfire>
