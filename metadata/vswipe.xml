<?xml version="1.0"?>
<wayfire>
	<plugin name="vswipe">
	<_short>Viewport Swipe</_short>
	<category>Desktop</category>
	<option name="duration" type="int">
		<_short>Duration</_short>
		<default>180</default>
	</option>
	<option name="enable_horizontal" type="bool">
		<_short>Enable Horizontal</_short>
		<default>1</default>
	</option>
	<option name="enable_vertical" type="bool">
		<_short>Enable Vertical</_short>
		<default>1</default>
	</option>
	<option name="enable_smooth_transition" type="bool">
		<_short>Enable Smooth Transition</_short>
		<default>0</default>
	</option>
	<option name="fingers" type="int">
		<_short>Number of Fingers</_short>
		<default>4</default>
	</option>
	<option name="gap" type="int">
		<_short>Gap</_short>
		<default>32</default>
	</option>
	<option name="threshold" type="double">
		<_short>Threshold</_short>
		<default>0.35</default>
	</option>
	<option name="delta_threshold" type="int">
		<_short>Delta Threshold</_short>
		<default>24</default>
	</option>
	<option name="speed_factor" type="int">
		<_short>Speed Factor</_short>
		<default>256</default>
	</option>
	<option name="speed_cap" type="double">
		<_short>Speed Cap</_short>
		<default>0.05</default>
	</option>
	<option name="background" type="color">
		<_short>Background Color</_short>
		<default>0.0 0.0 0.0 1.0</default>
	</option>
	</plugin>
</wayfire>
